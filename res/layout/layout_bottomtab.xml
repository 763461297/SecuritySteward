<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.challenger.securitysteward"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/tab_background" >
    
    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/item_div_line"
        android:background="#FFAAAAAA" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/tabs_height"
        android:orientation="horizontal">
        
	    <com.challenger.securitysteward.controls.TabButton
	       	android:id="@+id/tab_first"
	       	app:image="@drawable/ic_bookmark_outline_grey600_24dp"
	       	app:clickimage="@drawable/ic_bookmark_black_24dp"
	       	app:clickcolor="@color/tab_button_selected_color"
	       	app:text="@string/tab_button1"
	       	app:text_size="12dp"
	       	style="@style/main_tabbutton" />
	    
	    <com.challenger.securitysteward.controls.TabButton
	       	android:id="@+id/tab_second"
	       	app:image="@drawable/ic_notifications_none_grey600_24dp"
	       	app:clickimage="@drawable/ic_notifications_black_24dp"
	       	app:clickcolor="@color/tab_button_selected_color"
	       	app:text="@string/tab_button2"
	       	app:text_size="12dp"
	       	style="@style/main_tabbutton" />
	    
	    <com.challenger.securitysteward.controls.TabButton
	       	android:id="@+id/tab_third"
	       	app:image="@drawable/ic_profile_none_grey600_24dp"
	       	app:clickimage="@drawable/ic_profile_black_24dp"
	       	app:clickcolor="@color/tab_button_selected_color"
	       	app:text="@string/tab_button3"
	       	app:text_size="12dp"
	       	style="@style/main_tabbutton" />
	    
    </LinearLayout>

</LinearLayout>
